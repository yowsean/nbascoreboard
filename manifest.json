{
  "name": "NBA Scoreboard",
  "description": "Live NBA Scores in new tab page and popup",
  "version": "1.0",
  "chrome_url_overrides": {
    "newtab": "scores.html"
  },
  "manifest_version": 2,
  "permissions": [
      "activeTab",
      "http://data.nba.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "64": "images/icons/logo.png"
    },
    "default_title": "NBA Scores",
    "default_popup": "popup.html"
  },
  "icons": {
    "64": "images/icons/logo.png"
  }
}
